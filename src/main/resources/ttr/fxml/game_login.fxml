<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="880.0" prefWidth="1280.0" styleClass="anchor" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ttr.Views.GameLoginView">

    <children>
        <VBox fx:id="mainMenu" layoutX="422.0" layoutY="121.0" prefHeight="638.0" prefWidth="421.0">
            <children>
                <ImageView onMouseClicked="#playClicked">
                    <image>
                        <Image url="@../menu/playButton.png"/>
                    </image>
                </ImageView>
                <ImageView onMouseClicked="#settingsClicked">
                    <image>
                        <Image url="@../menu/settingsButton.png"/>
                    </image>
                </ImageView>
                <ImageView onMouseClicked="#closeClicked">
                    <image>
                        <Image url="@../menu/closeButton.png"/>
                    </image>
                </ImageView>
            </children>
        </VBox>
        <VBox fx:id="settings" layoutX="422.0" layoutY="420.0" prefHeight="638.0" prefWidth="421.0" visible="false">
            <Label styleClass="text">Volume</Label>
            <Slider fx:id="volumeSlider"/>
            <Label styleClass="text">SFX</Label>
            <Slider fx:id="sfxSlider"/>
        </VBox>
        <VBox fx:id="login" visible="false">
            <Label fx:id="tokenLabel" text="create or join game!"/>
            <TextField fx:id="tokenTextField"/>
            <Button onMouseClicked="#setGameToken" text="Select player!"/>
        </VBox>
    </children>

    <stylesheets>
        <URL value="@../css/game_login.css"/>
    </stylesheets>
</AnchorPane>
