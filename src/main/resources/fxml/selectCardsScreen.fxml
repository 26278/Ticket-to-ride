<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="views.SelectTrainCardView">
    <top>
        <Label BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <GridPane BorderPane.alignment="CENTER"
                  fx:id="boardGrid"
                  minHeight="400"
                  minWidth="400"
                  prefHeight="400.0"
                  prefWidth="600.0"
        />
    </center>
    <bottom>
        <Button BorderPane.alignment="CENTER"
                onMouseClicked="#confirmSelectedCards"
                disable="true"
        >Bevestig</Button>
    </bottom>
</BorderPane>
